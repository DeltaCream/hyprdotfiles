{
  "buttons": [
    {
      "label": "lock",
      "action": "hyprlock",
      "text": "Lock",
      "keybind": "l",
      "icon": "/usr/share/wleave/icons/lock.svg"
    },
    {
      "label": "shutdown",
      "action": "systemctl poweroff",
      "text": "Shutdown",
      "keybind": "s",
      "icon": "/usr/share/wleave/icons/shutdown.svg"
    },
    {
      "label": "logout",
      "action": "hyprshutdown >/dev/null 2>&1 && hyprshutdown || hyprctl dispatch exit",
      "text": "Logout",
      "keybind": "e",
      "icon": "/usr/share/wleave/icons/logout.svg"
    },
    {
      "label": "reboot",
      "action": "systemctl reboot",
      "text": "Reboot",
      "keybind": "r",
      "icon": "/usr/share/wleave/icons/reboot.svg"
    }
  ]
}
